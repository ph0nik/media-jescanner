<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="jscanner-sqlite">
        <description>Test configuration file for mysql connection</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.phonik.media-jscanner.model.MediaQuery</class>
        <class>com.phonik.media-jscanner.model.MediaLink</class>

        <properties>
<!--            <property name="dialect" value="org.hibernate.dialect.SQLiteDialect" />-->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/jscanner" />
            <property name="javax.persistence.jdbc.user" value="phonik" />
            <property name="javax.persistence.jdbc.password" value="phonik" />
            <property name="hibernate.show_sql" value="true" />
            <property name="format_sql" value="true" />
            <property name="hibernate.connection.charSet" value="UTF-8" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>
    </persistence-unit>
</persistence>